   ]
  },
  {
   "cell_type": "code",
   "metadata": {},
   "source": [
    "def preprocess(image, label):\n",
    "    image = tfds.as_numpy(image)\n",
    "    image = image / 255.0\n",
    "    return image, label\n",
    "\n",
    "cifar_train = cifar_train.map(preprocess)\n",
    "cifar_test = cifar_test.map(preprocess)"
   ],
